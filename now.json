{
  "public": true,
  "version": 2,
  "builds": [{ "src": "src/**/*.js", "use": "@now/node" }],
  "routes": [
    {
      "src": "/",
      "dest": "src/server/app.js",
      "methods": ["POST", "OPTIONS", "GET"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ],
  "github": {
    "autoJobCancelation": false
  }
}
