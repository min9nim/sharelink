{
  "public": true,
  "version": 2,
  "builds": [
    { "src": "src/**/*.js", "use": "@now/node@canary" },
    { "src": "public/**/*", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "src/index.js",
      "methods": ["POST", "OPTIONS", "GET"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ],
  "github": {
    "autoJobCancelation": false
  }
}
